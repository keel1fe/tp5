@model List<tp5.Models.Dance>
@{
    ViewData["Title"] = "Танцевальная студия";
}

<div class="container mt-4">
    <h2 class="mb-4">@ViewData["Title"]</h2>

    @if (Model != null && Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>ID</th>
                        <th>ФИО ребенка</th>
                        <th>Стиль танца</th>
                        <th>Возраст</th>
                        <th>Телефон родителя</th>
                        <th>Дата начала</th>
                        <th>Действия</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.CourseId</td>
                            <td>@item.FIO</td>
                            <td>@item.StyleDance</td>
                            <td>@item.Age</td>
                            <td>@item.ParentPhone</td>
                            <td>@item.StartDate.ToString("dd.MM.yyyy HH:mm")</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a href="@Url.Action("Edit", new { id = item.CourseId })"
                                       class="btn btn-sm btn-outline-warning">Редактировать</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-warning" role="alert">
            Нет доступных записей. Хотите добавить первое?
        </div>
    }

    <div class="mt-4">
        <a href="@Url.Action("Create")" class="btn btn-success">
            <i class="fas fa-plus me-2"></i> Добавить новую запись
        </a>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <style>
        .table th {
            background-color: #343a40;
            color: white;
        }
        .btn-group .btn {
            margin-right: 5px;
        }
        .btn-sm {
            padding: 0.25rem 0.5rem;
            font-size: 0.875rem;
        }
    </style>
}